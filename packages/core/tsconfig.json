{
  "compilerOptions": {
    "lib": [
			"DOM",
			"DOM.Iterable",
			"ES2022"
		],
    "resolveJsonModule": false,
    "target": "ES2022",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "moduleDetection": "force", 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "noUnusedParameters": false,
    "baseUrl": "./src",
    "paths": {
      "@ayazmo/utils/*": [
        "../utils/src/*"
      ],
      "@ayazmo/types/*": [
        "../types/src/*"
      ]
    }
  },
  "include": [
    "src",
    "node_modules/@fastify/awilix/lib/index.d.ts"
  ],
  "exclude": [
    "dist",
    "./__tests__",
    "./src/**/__mocks__",
    "./src/**/__fixtures__",
    "node_modules/**/*",
    "!node_modules/@fastify/awilix/lib/index.d.ts"  ]
}