{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "turbo.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "!node_modules/**",
        "dist/**"
      ]
    },
    "test": {
      "cache": false,
      "dependsOn": [
        "build"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
